{
  "dashboard": {
    "title": "MDVR Platform Overview",
    "tags": ["mdvr", "platform"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Connected Devices",
        "type": "stat",
        "targets": [
          {
            "expr": "count(device_connections_total == 1)"
          }
        ]
      },
      {
        "id": 2,
        "title": "Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total[5m])) by (service)"
          }
        ]
      },
      {
        "id": 3,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{status=~\"5..\"}[5m])) by (service)"
          }
        ]
      },
      {
        "id": 4,
        "title": "Response Time (p95)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le, service))"
          }
        ]
      },
      {
        "id": 5,
        "title": "Active Video Streams",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(active_video_streams)"
          }
        ]
      },
      {
        "id": 6,
        "title": "Media Storage Used",
        "type": "gauge",
        "targets": [
          {
            "expr": "sum(s3_bucket_size_bytes) / 1024 / 1024 / 1024 / 1024"
          }
        ]
      },
      {
        "id": 7,
        "title": "Database Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "pg_pool_connections_active"
          }
        ]
      },
      {
        "id": 8,
        "title": "Redis Memory",
        "type": "graph",
        "targets": [
          {
            "expr": "redis_memory_used_bytes / 1024 / 1024"
          }
        ]
      }
    ]
  }
}
